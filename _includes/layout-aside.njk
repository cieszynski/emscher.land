<aside>
    <h2>Themen</h2>
    <ul>
        {%- for post in collections.bydate -%}
            <li>
                <article>
                    <header>
                        <h3>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </h3>
                        <p>{{ post.data.subheader }}</p>
                    </header>
                    {% image post.data.image, post.data.imagetext %}
                </article>
            </li>
        {%- endfor -%}
    </ul>
</aside>